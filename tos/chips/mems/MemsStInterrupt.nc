/*
 * h/w interface for Mems sensors.
 * Single Interrupt linkage.
 *
 * written for ST register based SPI sensors.  Such as lis2dh12 (accel),
 * l3gd20h (gyro), and lis3mdl (magnetometer).  All I/O assumes direct
 * register access.
 */

interface MemsStInterrupt {
  async command void enableInterrupt();
  async command void disableInterrupt();
  async command bool isInterruptEnabled();
  async event   void interrupt();
}
